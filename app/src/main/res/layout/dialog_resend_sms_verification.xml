<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Resend SMS To Phone Number.\n Below are your phone number.\ " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="+60" />

            <EditText
                android:id="@+id/inputPhoneNo"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:popupBackground="@color/darkgrey"
                android:dropDownSelector="@color/darkgrey"
                android:foregroundTint="@color/darkgrey"
                android:background="@color/darkgrey"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Resend"
                android:layout_weight="1"
                android:background="@color/lightgrey"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="Cancel"
                android:layout_weight="1"
                android:background="@color/lightgrey"
                android:layout_marginRight="20dp" />



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>